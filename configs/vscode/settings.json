{
	"window.restoreWindows": "none",
	"workbench.startupEditor": "none",
	"workbench.editor.enablePreview": false,
	"workbench.editor.highlightModifiedTabs": true,
	"terminal.integrated.fontFamily": "MesloLGS NF",
	"terminal.external.osxExec": "iTerm.app",
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.cursorStyle": "line",
	"explorer.sortOrder": "type",
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"liveServer.settings.donotShowInfoMsg": true,
	"[c]": {
		"editor.defaultFormatter": "ms-vscode.cpptools"
	},
	"[cpp]": {
		"editor.defaultFormatter": "ms-vscode.cpptools"
	},
	"emmet.includeLanguages": {
		"erb": "html",
		"javascript": "javascriptreact",
		"typescript": "typescriptreact"
	},

	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"code-runner.runInTerminal": true,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"javascript.suggest.autoImports": true,
	"typescript.suggest.autoImports": true,

	"editor.bracketPairColorization.enabled": true,
	"editor.guides.bracketPairs": "active",
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.renderControlCharacters": true,
	"editor.rulers": [100],
	"editor.showFoldingControls": "mouseover",
	// "editor.snippetSuggestions": "top",
	// "editor.suggestSelection": "first",
	// "editor.quickSuggestions": {
	// 	"other": "on",
	// 	"comments": "off",
	// 	"strings": "on"
	// },

	"files.autoSave": "onFocusChange",
	"files.trimTrailingWhitespace": true,
	"files.hotExit": "onExit",
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"**/*.*.meta": true,
		"**/*.tga": true,
		"**/*.cubemap": true,
		"**/Temp": true,
		"**/*.exe": true,
		"**/.classpath": true,
		"**/.project": true,
		"**/.settings": true,
		"**/.factorypath": true,
		"**/.vscode": true,
		"**/*.meta": true,
		"**/Icon*": true
	},
	"editor.tabSize": 3,
	"editor.insertSpaces": true,
	"editor.detectIndentation": false,
	"editor.fontFamily": "'JetBrains Mono', 'MesloLGS NF'",
	"editor.fontSize": 13,
	"editor.fontLigatures": true,
	"editor.smoothScrolling": true,
	"editor.cursorBlinking": "smooth",
	"editor.cursorStyle": "line",
	"editor.minimap.enabled": false,
	"editor.wordWrap": "wordWrapColumn",
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"editor.unicodeHighlight.nonBasicASCII": false,
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"prettier.jsxSingleQuote": true,
	"prettier.printWidth": 100,
	"prettier.tabWidth": 3,
	"prettier.semi": true,
	"prettier.singleQuote": true,
	"prettier.trailingComma": "all",
	"prettier.useTabs": true,
	"prettier.endOfLine": "auto",
	"editor.codeLens": false,
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit",
		"source.sortImport": "explicit",
		"source.organizeImports": "explicit"
	},
	// "code-runner.executorMap": {
	// 	"c": "cd $dir && gcc *.c -o $fileNameWithoutExt && $dir$fileNameWithoutExt"
	// },

	"editor.inlineSuggest.enabled": true,
	"[dart]": {
		"editor.formatOnSave": true,
		"editor.formatOnType": true,
		"editor.rulers": [80],
		"editor.selectionHighlight": false,
		"editor.suggest.snippetsPreventQuickSuggestions": true,
		"editor.suggestSelection": "recentlyUsedByPrefix",
		"editor.tabCompletion": "onlySnippets",
		"editor.wordBasedSuggestions": "off"
	},
	"editor.foldingStrategy": "indentation",
	"workbench.list.smoothScrolling": true,
	"terminal.integrated.enableMultiLinePasteWarning": false,

	"git.enabled": true,

	"window.commandCenter": false,
	"workbench.colorTheme": "Material Theme Darker High Contrast",
	"workbench.productIconTheme": "icons-carbon",
	"workbench.colorCustomizations": {
		"input.background": "#191919",
		"list.activeSelectionBackground": "#191919",
		"list.hoverBackground": "#191919",
		"editorWidget.background": "#191919",
		"panel.background": "#191919",
		"titleBar.activeBackground": "#131313",
		"titleBar.inactiveBackground": "#131313",
		"breadcrumbPicker.background": "#191919",
		"settings.dropdownBackground": "#191919",
		"settings.numberInputBackground": "#191919",
		"settings.textInputBackground": "#191919",
		"settings.checkboxBackground": "#191919",
		"editor.background": "#0f0f0f",
		"tab.activeBackground": "#131313",
		"tab.inactiveBackground": "#0f0f0f", //0f0f0f
		"sideBar.background": "#131313",
		"sideBarSectionHeader.background": "#131313", //1a1a1a
		"activityBar.background": "#131313",
		"statusBar.background": "#131313",
		"scrollbarSlider.activeBackground": "#131313",
		"tab.activeBorder": "#0f0f0f00",
		"editorGroupHeader.tabsBackground": "#0f0f0f",
		"statusBar.noFolderBackground": "#0f0f0f",
		"tab.border": "#0f0f0f",
		"editorHoverWidget.background": "#0f0f0f",
		"menu.background": "#0f0f0f",
		"debugToolBar.background": "#0f0f0f",
		"editorBracketMatch.background": "#0f0f0f",
		"quickInput.background": "#0f0f0f",
		"editorOverviewRuler.border": "#0f0f0f",
		"notifications.background": "#0f0f0f",
		"breadcrumb.background": "#0f0f0f"
	},
	"workbench.iconTheme": "icons",
	"extensions.ignoreRecommendations": true,
	"diffEditor.hideUnchangedRegions.enabled": true,
	"git.openRepositoryInParentFolders": "never"
}
